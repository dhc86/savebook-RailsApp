
<div class="container general-container">
  <div class="col-lg-12">

    <div class="col-lg-2">
      <p><img src=<%= current_user.picture_url %> alt="" height="20" width="20"> <a href="/users/<%= current_user.id %>"><%= current_user.first_name %> <%= current_user.last_name%></a></p>
      <p><span class="glyphicon glyphicon-pencil"></span> <%= link_to "Settings", edit_user_registration_path %></p>
      <h5>MORE USERS</h5>
      <% @users.each do |user| %>
        <div class="user-tiny-info">
          <p>
            <img src=<%= user.picture_url %> alt="" height="20" width="20">
            <%= link_to user.first_name, user_path(user) %>
          </p>
        </div>
      <% end %>

    </div>
    <div class="col-lg-7">

      <div class="media">
        <% @books.each do |book| %>

          <div class="small-containers">

            <div class="media-left media-top">
              <a href="#">
              <img class="media-object" src="..." alt="...">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading">Middle aligned media</h4>
              <h3><%= book.title %></h3>
              <h4>by: <%= book.author %></h4>
              <p><%= book.description %></p>
                <% if user_signed_in? == false %>
                  <button><%= link_to 'Show', book %></button> 
                <% end %>
            </div>
              <% if user_signed_in? %>
                <% if current_user.id == book.user_id %>
                  <button>  <%= link_to 'Show', book %></button>
                  <%= link_to 'Edit', edit_book_path(book) %>
                  <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% else %>
                  <button class="btn facebook-style-button"><%= link_to 'Show', book %></button> 
                <% end %>
              <% end %>

        
          </div>
        <br>
        <% end %>
      </div>
    </div>
    <div class="col-lg-2 small-containers" >
      <p>Music App</p>
      <p>Movie App</p>
      <p>Resume</p>
      <p>Github</p>
    </div>


  </div>
</div>





