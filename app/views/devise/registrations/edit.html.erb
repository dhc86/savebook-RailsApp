<div class="container">
<% @current_user_imageprofile = Imageprofile.where(user_id: current_user.id )[0] %>
  <h2>Edit <%= resource_name.to_s.humanize %> Settings</h2>

  <div class="col-lg-12">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

    
      <div class="col-lg-4 small-containers">
        <h3>Basic Setting:</h3>
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
          <%= f.input :about, required: true, autofocus: true %>
          <%= f.input :address, required: true, autofocus: true %>
          <p>Note: This info is require to locate books in your area.</p>
          <div class="actions">
          <input type="submit" name="commit" value="Update">
        </div>
      </div>


      <div class="col-lg-4 small-containers">
        <h3>Email Settings</h3>  
        <%= f.input :email, required: true, autofocus: true %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <i>(Password and Confirmation password leave blank if you don't want to change it)</i>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <i>(We need your current password to confirm your changes)</i>
        <%= f.input :current_password, required: true %>

        <div class="actions">
          <input type="submit" name="commit" value="Update">
        </div>
      </div>
    <% end %>

    <div class="col-lg-4 small-containers">
      <h3>Images Uploads:</h3>
      <p>Click Camara to upload images:</p>

      <a href="/imageprofiles/new"><img src="/assets/uploadimages.png" alt="" height="70" width="80"></a>

      <h3>Cancel my account</h3>
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>







  </div>
</div>